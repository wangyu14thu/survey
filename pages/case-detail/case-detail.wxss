/* pages/case-detail/case-detail.wxss */
.detail-container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.detail-header {
  padding: 60rpx 30rpx;
  text-align: center;
  color: white;
}

.header-icon {
  font-size: 100rpx;
  display: block;
  margin-bottom: 20rpx;
}

.header-title {
  font-size: 40rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 12rpx;
}

.header-subtitle {
  font-size: 26rpx;
  opacity: 0.9;
  display: block;
}

.points-bar {
  margin: -40rpx 30rpx 30rpx;
  background-color: white;
  padding: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.1);
}

.points-info {
  display: flex;
  align-items: center;
  justify-content: center;
}

.points-icon {
  font-size: 40rpx;
  margin-right: 12rpx;
}

.points-text {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.cases-list {
  padding: 0 30rpx 30rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.case-card {
  background-color: white;
  padding: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s;
}

.case-card:active {
  transform: scale(0.98);
}

.case-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
  line-height: 1.5;
}

.case-tags {
  display: flex;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.tag {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: bold;
}

.subject-tag {
  background-color: #e3f2fd;
  color: #2196f3;
}

.difficulty-tag {
  color: white;
}

.difficulty-tag.基础 {
  background-color: #4caf50;
}

.difficulty-tag.进阶 {
  background-color: #ff9800;
}

.difficulty-tag.高级 {
  background-color: #f44336;
}

.case-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.case-points {
  display: flex;
  align-items: center;
}

.points-icon-small {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.points-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #f093fb;
}

.case-arrow {
  font-size: 48rpx;
  color: #ccc;
}

