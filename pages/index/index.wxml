<!--pages/index/index.wxml-->
<view class="index-container">
  <!-- Header -->
  <view class="header">
    <view class="header-content">
      <view class="greeting">
        <text class="greeting-text">你好，{{teacherInfo.nickname || '教师'}}👋</text>
        <text class="greeting-subtitle">欢迎来到PBL营</text>
      </view>
      <view class="points-badge">
        <text class="points-icon">💎</text>
        <text class="points-text">{{teacherInfo.points || 0}}积分</text>
      </view>
    </view>
  </view>

  <!-- Modules Grid -->
  <view class="modules-section">
    <view class="section-title">
      <text class="title-text">功能模块</text>
      <text class="title-line"></text>
    </view>
    <view class="modules-grid">
      <view 
        class="module-card" 
        wx:for="{{modules}}" 
        wx:key="id"
        bindtap="navigateToModule"
        data-url="{{item.url}}"
        style="background: linear-gradient(135deg, {{item.color}} 0%, {{item.color}}cc 100%);"
      >
        <view class="module-icon">{{item.icon}}</view>
        <view class="module-name">{{item.name}}</view>
        <view class="module-desc">{{item.desc}}</view>
        <view class="module-arrow">→</view>
      </view>
    </view>
  </view>

  <!-- Tips -->
  <view class="tips-section">
    <view class="tip-card">
      <text class="tip-icon">💡</text>
      <view class="tip-content">
        <text class="tip-title">积分说明</text>
        <text class="tip-text">上传优质项目可获得积分，积分可兑换资料</text>
      </view>
    </view>
  </view>
</view>

