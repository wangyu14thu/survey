/* pages/index/index.wxss */
.index-container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 30rpx 40rpx;
  border-radius: 0 0 50rpx 50rpx;
}

.header-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.greeting {
  flex: 1;
}

.greeting-text {
  font-size: 40rpx;
  font-weight: bold;
  color: white;
  display: block;
  margin-bottom: 8rpx;
}

.greeting-subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  display: block;
}

.points-badge {
  background-color: rgba(255, 255, 255, 0.2);
  padding: 16rpx 28rpx;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  backdrop-filter: blur(10rpx);
}

.points-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
}

.points-text {
  font-size: 28rpx;
  color: white;
  font-weight: bold;
}

.modules-section {
  padding: 40rpx 30rpx;
}

.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.title-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-right: 20rpx;
}

.title-line {
  flex: 1;
  height: 4rpx;
  background: linear-gradient(90deg, #667eea 0%, transparent 100%);
  border-radius: 2rpx;
}

.modules-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.module-card {
  width: calc(50% - 10rpx);
  padding: 40rpx 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.1);
  position: relative;
  overflow: hidden;
  transition: all 0.3s;
}

.module-card:active {
  transform: scale(0.95);
}

.module-icon {
  font-size: 60rpx;
  margin-bottom: 16rpx;
}

.module-name {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 8rpx;
}

.module-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.4;
}

.module-arrow {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  font-size: 40rpx;
  color: rgba(255, 255, 255, 0.5);
}

.tips-section {
  padding: 0 30rpx 30rpx;
}

.tip-card {
  background-color: white;
  padding: 30rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.tip-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.tip-content {
  flex: 1;
}

.tip-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #999;
  line-height: 1.4;
}

