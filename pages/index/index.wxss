/* pages/index/index.wxss */
.index-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 30rpx;
}

/* Banner轮播 */
.banner-swiper {
  width: 100%;
  height: 320rpx;
}

.banner-image {
  width: 100%;
  height: 100%;
}

/* 板块卡片 */
.section-card {
  margin: 30rpx;
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

/* 板块标题 */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.header-left {
  display: flex;
  align-items: center;
}

.section-icon {
  font-size: 48rpx;
  margin-right: 16rpx;
}

.header-text {
  display: flex;
  flex-direction: column;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 4rpx;
}

.section-subtitle {
  font-size: 24rpx;
  color: #999;
}

.header-right {
  display: flex;
  align-items: center;
}

.link-text {
  font-size: 26rpx;
  color: #4A90E2;
  margin-right: 4rpx;
}

.arrow {
  font-size: 36rpx;
  color: #4A90E2;
  transform: rotate(90deg);
}

/* 投票活动板块 */
.vote-section {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.vote-section .section-title,
.vote-section .section-subtitle,
.vote-section .link-text,
.vote-section .arrow {
  color: white;
}

.vote-section .section-icon {
  filter: grayscale(100%) brightness(200%);
}

.vote-status {
  display: flex;
  justify-content: space-between;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.status-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.status-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 8rpx;
}

.status-value {
  font-size: 28rpx;
  font-weight: bold;
  color: white;
}

.status-value.ongoing {
  color: #4ade80;
}

.status-value.ended {
  color: #ff6b6b;
}

.status-value.highlight {
  font-size: 36rpx;
  color: #ffd700;
}

.vote-action {
  display: flex;
}

.btn-vote {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  background-color: white;
  color: #667eea;
  border-radius: 40rpx;
  font-size: 30rpx;
  font-weight: bold;
  border: none;
}

.btn-vote.btn-disabled {
  background-color: rgba(255, 255, 255, 0.3);
  color: rgba(255, 255, 255, 0.8);
}

/* 实践主题网格 */
.entry-card {
  display: flex;
  align-items: center;
  padding: 40rpx 30rpx;
  transition: all 0.3s;
}

.entry-card:active {
  transform: scale(0.98);
  background-color: #f8f9fa;
}

.entry-icon-large {
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.entry-emoji {
  font-size: 64rpx;
}

.entry-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.entry-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.entry-desc {
  font-size: 26rpx;
  color: #999;
}

.entry-arrow-wrapper {
  margin-left: 20rpx;
}

.entry-arrow {
  font-size: 56rpx;
  color: #ddd;
  transform: rotate(90deg);
  display: block;
}
