/* pages/index/index.wxss */
.index-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 30rpx;
}

/* Banner轮播 */
.banner-swiper {
  width: 100%;
  height: 360rpx;
}

.banner-image {
  width: 100%;
  height: 100%;
}

/* 投票状态卡片 */
.vote-status-card {
  margin: 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.status-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.status-icon {
  font-size: 48rpx;
  margin-right: 16rpx;
}

.status-title {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
}

.status-content {
  margin-bottom: 30rpx;
}

.status-text {
  color: rgba(255, 255, 255, 0.9);
  font-size: 28rpx;
  line-height: 1.6;
}

.countdown {
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 12rpx;
  text-align: center;
}

.countdown-text {
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  font-family: 'Courier New', monospace;
}

.status-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: white;
  color: #667eea;
  border-radius: 40rpx;
  font-size: 30rpx;
  font-weight: bold;
  border: none;
}

/* 章节标题 */
.section-header {
  padding: 40rpx 30rpx 20rpx;
}

.section-title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.section-subtitle {
  display: block;
  font-size: 26rpx;
  color: #999;
}

/* 主题卡片 */
.themes-container {
  padding: 0 30rpx;
}

.theme-card {
  background-color: white;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s;
}

.theme-card:active {
  transform: scale(0.98);
}

.theme-cover {
  position: relative;
  height: 360rpx;
  overflow: hidden;
}

.cover-image {
  width: 100%;
  height: 100%;
}

.theme-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(to bottom, transparent 50%, rgba(0, 0, 0, 0.6));
  display: flex;
  align-items: flex-end;
  padding: 30rpx;
}

.theme-icon {
  font-size: 80rpx;
}

.theme-info {
  padding: 30rpx;
}

.theme-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.theme-location {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.location-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.location-text {
  font-size: 26rpx;
  color: #666;
  flex: 1;
}

.theme-desc {
  font-size: 28rpx;
  color: #999;
  line-height: 1.6;
}

/* 统计卡片 */
.stats-card {
  margin: 30rpx;
  padding: 30rpx;
  background-color: white;
  border-radius: 16rpx;
  text-align: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.stats-icon {
  font-size: 40rpx;
  margin-right: 12rpx;
}

.stats-text {
  font-size: 28rpx;
  color: #666;
}

.stats-number {
  color: #4A90E2;
  font-weight: bold;
  font-size: 36rpx;
}

/* 快捷入口 */
.quick-entry {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  padding: 30rpx;
  background-color: white;
  margin: 0 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.entry-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
}

.entry-icon {
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  margin-bottom: 16rpx;
  position: relative;
}

.entry-icon.badge::after {
  content: 'New';
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  background-color: #ff4444;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  font-weight: bold;
}

.entry-text {
  font-size: 24rpx;
  color: #666;
}

