/* pages/teacher/upload.wxss */
.upload-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 30rpx;
}

.upload-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 40rpx;
  text-align: center;
  color: white;
}

.header-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.header-subtitle {
  display: block;
  font-size: 28rpx;
  opacity: 0.9;
}

.upload-form {
  padding: 30rpx;
}

.form-item {
  margin-bottom: 40rpx;
}

.label {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.label-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.required {
  color: #ff4444;
  margin-left: 8rpx;
  font-size: 28rpx;
}

.photo-count {
  margin-left: auto;
  font-size: 24rpx;
  color: #999;
}

.input {
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 24rpx;
  background-color: white;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: 2rpx solid #e0e0e0;
}

.picker {
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 24rpx;
  background-color: white;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: 2rpx solid #e0e0e0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.picker.placeholder {
  color: #999;
}

.arrow {
  font-size: 48rpx;
  color: #999;
  font-weight: 300;
  transform: rotate(90deg);
}

/* 照片上传 */
.photo-upload-area {
  background-color: white;
  border-radius: 12rpx;
  padding: 20rpx;
  border: 2rpx solid #e0e0e0;
}

.photo-list {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.photo-item {
  position: relative;
  width: 100%;
  padding-bottom: 100%;
  border-radius: 12rpx;
  overflow: hidden;
}

.photo-preview {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.photo-remove {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 48rpx;
  height: 48rpx;
  background-color: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
}

.remove-icon {
  color: white;
  font-size: 36rpx;
  font-weight: bold;
  line-height: 1;
}

.photo-add {
  width: 100%;
  padding-bottom: 100%;
  position: relative;
  background-color: #f5f5f5;
  border: 2rpx dashed #ccc;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.photo-add::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.add-icon {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -70%);
  font-size: 64rpx;
  color: #999;
}

.add-text {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, 40%);
  font-size: 24rpx;
  color: #999;
}

.upload-tip {
  display: flex;
  align-items: flex-start;
  margin-top: 20rpx;
}

.tip-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.tip-text {
  flex: 1;
  font-size: 24rpx;
  color: #999;
  line-height: 1.6;
}

.btn-submit {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  margin-top: 20rpx;
}

