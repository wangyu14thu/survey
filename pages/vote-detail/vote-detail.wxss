/* pages/vote-detail/vote-detail.wxss */
.detail-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 160rpx;
}

.detail-header {
  position: relative;
  height: 500rpx;
}

.header-image {
  width: 100%;
  height: 100%;
}

.header-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 50rpx 40rpx;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.8), transparent);
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.theme-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.theme-name {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
}

.detail-content {
  padding: 30rpx;
}

.info-section {
  background-color: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.title-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

.info-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
}

.activities-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.activity-item {
  display: flex;
  align-items: flex-start;
  padding-left: 20rpx;
}

.activity-dot {
  width: 12rpx;
  height: 12rpx;
  background-color: #4A90E2;
  border-radius: 50%;
  margin-right: 20rpx;
  margin-top: 16rpx;
  flex-shrink: 0;
}

.activity-text {
  flex: 1;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx;
  background-color: white;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.btn-vote {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
}

