/* pages/order/order.wxss */
.order-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 30rpx;
}

.order-header {
  padding: 40rpx 30rpx 20rpx;
  background-color: white;
}

.header-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

/* 订单列表 */
.orders-list {
  padding: 30rpx;
}

.order-card {
  background-color: white;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.order-status {
  padding: 20rpx 30rpx;
  text-align: right;
}

.order-status.pending {
  background-color: #fff7e6;
}

.order-status.paid {
  background-color: #e6f7ff;
}

.order-status.ongoing {
  background-color: #f0f9ff;
}

.order-status.completed {
  background-color: #f6ffed;
}

.order-status.cancelled {
  background-color: #f5f5f5;
}

.status-text {
  font-size: 26rpx;
  font-weight: bold;
}

.order-status.pending .status-text {
  color: #fa8c16;
}

.order-status.paid .status-text {
  color: #1890ff;
}

.order-status.ongoing .status-text {
  color: #52c41a;
}

.order-status.completed .status-text {
  color: #389e0d;
}

.order-status.cancelled .status-text {
  color: #999;
}

/* 订单内容 */
.order-content {
  display: flex;
  padding: 30rpx;
  gap: 20rpx;
}

.order-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
}

.order-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.order-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.order-time {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.order-price {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff6b6b;
}

/* 订单操作 */
.order-actions {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

.action-btn {
  flex: 1;
  height: 72rpx;
  line-height: 72rpx;
  border-radius: 36rpx;
  font-size: 28rpx;
  border: none;
}

.action-btn::after {
  border: none;
}

.action-btn.primary {
  background-color: #4A90E2;
  color: white;
}

.action-btn.secondary {
  background-color: white;
  color: #666;
  border: 2rpx solid #e0e0e0;
}

/* 空状态 */
.empty-state {
  padding: 120rpx 60rpx;
  text-align: center;
}

.empty-image {
  width: 400rpx;
  height: 400rpx;
  opacity: 0.3;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: #999;
  margin: 40rpx 0;
}

.btn-explore {
  width: 400rpx;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #4A90E2;
  color: white;
  border-radius: 44rpx;
  font-size: 30rpx;
  font-weight: bold;
  border: none;
}

