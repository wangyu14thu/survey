/* pages/certificate/certificate.wxss */
.certificate-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 30rpx;
}

.page-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 40rpx;
  text-align: center;
  color: white;
}

.header-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.header-subtitle {
  display: block;
  font-size: 28rpx;
  opacity: 0.9;
}

/* 证书列表 */
.certificates-list {
  padding: 30rpx;
}

.certificate-card {
  background-color: white;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.cert-header {
  position: relative;
  height: 320rpx;
  overflow: hidden;
}

.cert-bg {
  width: 100%;
  height: 100%;
  filter: brightness(0.9);
}

.cert-badge {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #ffd700, #ffed4e);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(255, 215, 0, 0.5);
}

.badge-icon {
  font-size: 56rpx;
}

.cert-content {
  padding: 40rpx;
  text-align: center;
}

.cert-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.cert-role {
  font-size: 28rpx;
  color: #4A90E2;
  margin-bottom: 24rpx;
}

.cert-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.info-name {
  font-size: 28rpx;
  color: #666;
}

.info-date {
  font-size: 24rpx;
  color: #999;
}

.cert-actions {
  display: flex;
  border-top: 1rpx solid #f0f0f0;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  font-size: 28rpx;
  color: #666;
  background-color: white;
  border: none;
  border-radius: 0;
}

.action-btn:first-child {
  border-right: 1rpx solid #f0f0f0;
}

.action-btn::after {
  border: none;
}

.btn-icon {
  font-size: 32rpx;
}

/* 空状态 */
.empty-state {
  padding: 120rpx 60rpx;
  text-align: center;
}

.empty-image {
  width: 400rpx;
  height: 400rpx;
  opacity: 0.3;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: #999;
  margin-top: 40rpx;
  margin-bottom: 16rpx;
}

.empty-tip {
  display: block;
  font-size: 26rpx;
  color: #ccc;
}

/* 更多活动 */
.more-activities {
  margin: 30rpx;
  padding: 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  text-align: center;
}

.more-title {
  display: block;
  color: white;
  font-size: 32rpx;
  margin-bottom: 24rpx;
}

.btn-courses {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: white;
  color: #667eea;
  border-radius: 44rpx;
  font-size: 30rpx;
  font-weight: bold;
  border: none;
  position: relative;
}

.btn-badge {
  position: absolute;
  top: -8rpx;
  right: 60rpx;
  background-color: #ff4444;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

/* 证书详情弹窗 */
.cert-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 60rpx 30rpx;
}

.modal-content {
  width: 100%;
  max-width: 600rpx;
}

.cert-detail {
  position: relative;
  background-color: white;
  border-radius: 20rpx;
  overflow: hidden;
}

.cert-detail-bg {
  width: 100%;
  height: auto;
}

.cert-detail-content {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 40rpx;
}

.detail-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.detail-subtitle {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 60rpx;
  letter-spacing: 2rpx;
}

.detail-body {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  line-height: 2;
}

.detail-text {
  font-size: 28rpx;
  color: #666;
}

.detail-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin: 12rpx 0;
}

.detail-theme {
  font-size: 36rpx;
  font-weight: bold;
  color: #4A90E2;
  margin: 12rpx 0;
}

.detail-role {
  font-size: 44rpx;
  font-weight: bold;
  color: #667eea;
  margin-top: 20rpx;
}

.detail-footer {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  margin-top: 40rpx;
}

.detail-date,
.detail-org {
  font-size: 24rpx;
  color: #999;
}

.modal-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 30rpx;
}

.modal-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #4A90E2;
  color: white;
  border-radius: 44rpx;
  font-size: 30rpx;
  font-weight: bold;
  border: none;
}

.modal-btn.secondary {
  background-color: white;
  color: #666;
}

