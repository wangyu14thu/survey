/* pages/admin/admin.wxss */
.admin-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 30rpx;
}

.admin-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 40rpx;
  text-align: center;
  color: white;
}

.header-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.header-subtitle {
  display: block;
  font-size: 28rpx;
  opacity: 0.9;
}

/* 统计卡片网格 */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 30rpx;
}

.stat-card {
  background-color: white;
  border-radius: 16rpx;
  padding: 40rpx 30rpx;
  text-align: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.stat-icon {
  display: block;
  font-size: 60rpx;
  margin-bottom: 16rpx;
}

.stat-number {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #4A90E2;
  margin-bottom: 8rpx;
}

.stat-label {
  display: block;
  font-size: 24rpx;
  color: #999;
}

/* 管理区块 */
.management-section {
  padding: 0 30rpx;
  margin-bottom: 30rpx;
}

.section-header {
  padding: 20rpx 0;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.card {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

/* 投票结果 */
.results-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.results-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.btn-action {
  padding: 12rpx 24rpx;
  background-color: #f0f0f0;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #666;
  border: none;
  height: auto;
  line-height: 1.5;
}

.results-list {
  margin-bottom: 30rpx;
}

.result-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.result-item:last-child {
  border-bottom: none;
}

.result-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.result-rank {
  width: 56rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  border-radius: 50%;
  font-size: 28rpx;
  font-weight: bold;
}

.result-name {
  font-size: 28rpx;
  color: #333;
}

.result-right {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
}

.result-votes {
  font-size: 32rpx;
  font-weight: bold;
  color: #4A90E2;
}

.result-percent {
  font-size: 24rpx;
  color: #999;
}

.vote-controls {
  display: flex;
  gap: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.btn-control {
  flex: 1;
  height: 72rpx;
  line-height: 72rpx;
  border-radius: 36rpx;
  font-size: 28rpx;
  border: 2rpx solid #e0e0e0;
  background-color: white;
  color: #666;
}

.btn-control.primary {
  background-color: #4A90E2;
  color: white;
  border-color: #4A90E2;
}

/* 课程列表 */
.course-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.course-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 20rpx;
}

.course-info {
  flex: 1;
}

.course-name {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.course-progress {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.course-progress .progress-bar {
  flex: 1;
  height: 12rpx;
  background-color: #f0f0f0;
  border-radius: 6rpx;
  overflow: hidden;
}

.course-progress .progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #667eea, #764ba2);
  border-radius: 6rpx;
}

.course-progress .progress-text {
  font-size: 24rpx;
  color: #999;
}

.btn-manage {
  padding: 12rpx 24rpx;
  background-color: #4A90E2;
  color: white;
  border-radius: 8rpx;
  font-size: 24rpx;
  border: none;
  height: auto;
  line-height: 1.5;
}

/* 导出按钮 */
.export-card {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.btn-export {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #f8f9fa;
  color: #666;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: 2rpx solid #e0e0e0;
}

