/* pages/result/result.wxss */
.result-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #667eea 0%, #f5f5f5 400rpx);
  padding-bottom: 50rpx;
}

.result-header {
  padding: 60rpx 40rpx 40rpx;
  text-align: center;
  color: white;
}

.header-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.header-subtitle {
  display: block;
  font-size: 28rpx;
  opacity: 0.9;
}

/* ÂÜ†ÂÜõÂç°Áâá */
.winner-card {
  margin: 0 30rpx 40rpx;
  background: linear-gradient(135deg, #ffd700 0%, #ffed4e 100%);
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(255, 215, 0, 0.4);
  position: relative;
  overflow: hidden;
}

.winner-card::before {
  content: 'üëë';
  position: absolute;
  top: -20rpx;
  right: -20rpx;
  font-size: 200rpx;
  opacity: 0.1;
  transform: rotate(-15deg);
}

.winner-badge {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
}

.badge-icon {
  font-size: 40rpx;
  margin-right: 12rpx;
}

.badge-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #8b4513;
}

.winner-content {
  text-align: center;
  position: relative;
  z-index: 1;
}

.winner-icon {
  display: block;
  font-size: 120rpx;
  margin-bottom: 20rpx;
}

.winner-name {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #8b4513;
  margin-bottom: 12rpx;
}

.winner-location {
  display: block;
  font-size: 26rpx;
  color: #8b4513;
  opacity: 0.8;
  margin-bottom: 30rpx;
}

.winner-stats {
  background-color: rgba(255, 255, 255, 0.5);
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  align-items: baseline;
  justify-content: center;
  gap: 12rpx;
}

.votes-number {
  font-size: 60rpx;
  font-weight: bold;
  color: #8b4513;
}

.votes-text {
  font-size: 32rpx;
  color: #8b4513;
  margin-right: 20rpx;
}

.votes-percent {
  font-size: 28rpx;
  color: #8b4513;
  opacity: 0.8;
}

.winner-activities {
  margin-top: 30rpx;
  padding-top: 30rpx;
  border-top: 2rpx dashed rgba(139, 69, 19, 0.3);
}

.activities-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #8b4513;
  margin-bottom: 16rpx;
}

.activities-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.activity-item {
  font-size: 26rpx;
  color: #8b4513;
  opacity: 0.9;
}

/* ÊéíÂêçÂàóË°® */
.ranking-section {
  margin: 0 30rpx 40rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
}

.ranking-list {
  background-color: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.ranking-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.ranking-item:last-child {
  border-bottom: none;
}

.rank-number {
  width: 56rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  border-radius: 50%;
  font-size: 28rpx;
  font-weight: bold;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.rank-1 {
  background: linear-gradient(135deg, #ffd700, #ffed4e);
  color: #8b4513;
}

.rank-2 {
  background: linear-gradient(135deg, #c0c0c0, #e8e8e8);
  color: #666;
}

.rank-3 {
  background: linear-gradient(135deg, #cd7f32, #e6a23c);
  color: white;
}

.rank-number:not(.rank-1):not(.rank-2):not(.rank-3) {
  background-color: #f5f5f5;
  color: #999;
}

.rank-icon {
  font-size: 56rpx;
  margin-right: 20rpx;
}

.rank-info {
  flex: 1;
  margin-right: 20rpx;
}

.rank-name {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.rank-bar-container {
  width: 100%;
  height: 12rpx;
  background-color: #f0f0f0;
  border-radius: 6rpx;
  overflow: hidden;
}

.rank-bar {
  height: 100%;
  background: linear-gradient(90deg, #667eea, #764ba2);
  border-radius: 6rpx;
  transition: width 0.5s ease;
}

.rank-votes {
  text-align: right;
  flex-shrink: 0;
}

.rank-votes .votes-number {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #4A90E2;
}

.rank-votes .votes-unit {
  display: block;
  font-size: 24rpx;
  color: #999;
}

/* ÈÄöÁü•Âç°Áâá */
.notice-card {
  margin: 0 30rpx 40rpx;
  background-color: white;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.notice-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.notice-icon {
  font-size: 40rpx;
  margin-right: 12rpx;
}

.notice-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.notice-content {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.notice-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  text-indent: 2em;
}

/* Êìç‰ΩúÊåâÈíÆ */
.action-buttons {
  display: flex;
  gap: 20rpx;
  padding: 0 30rpx;
}

.btn-action {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 30rpx;
  font-weight: bold;
  border: none;
}

