/* pages/tool-detail/tool-detail.wxss */
.detail-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 30rpx;
}

.detail-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 40rpx;
  border-radius: 20rpx;
  text-align: center;
  margin-bottom: 30rpx;
}

.tool-title {
  font-size: 44rpx;
  font-weight: bold;
  color: white;
  display: block;
  margin-bottom: 12rpx;
}

.tool-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  display: block;
}

.points-card {
  background-color: white;
  padding: 40rpx;
  border-radius: 20rpx;
  display: flex;
  justify-content: space-around;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.points-info {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.points-label {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.points-value-wrapper {
  display: flex;
  align-items: center;
}

.points-icon {
  font-size: 36rpx;
  margin-right: 8rpx;
}

.points-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #f093fb;
}

.content-card {
  background-color: white;
  padding: 40rpx;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.content-section {
  margin-bottom: 40rpx;
}

.content-section:last-child {
  margin-bottom: 0;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 16rpx;
}

.section-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  display: block;
}

.action-bar {
  margin-bottom: 20rpx;
}

.btn-purchase {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.4);
}

.btn-purchased {
  background: #e0e0e0;
  color: #999;
  box-shadow: none;
}

.tips-box {
  padding: 24rpx 30rpx;
  background-color: #fff3cd;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
}

.tips-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.tips-text {
  font-size: 24rpx;
  color: #856404;
  flex: 1;
  line-height: 1.5;
}

