/* pages/authorization/authorization.wxss */
.auth-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx;
}

.auth-header {
  text-align: center;
  margin-bottom: 60rpx;
}

.auth-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 30rpx;
}

.auth-title {
  font-size: 40rpx;
  font-weight: bold;
  color: white;
  line-height: 1.4;
}

.auth-content {
  background-color: white;
  border-radius: 24rpx;
  padding: 40rpx;
}

.auth-section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 28rpx;
  background-color: #4A90E2;
  border-radius: 3rpx;
}

.section-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  background-color: #f5f7fa;
  padding: 20rpx;
  border-radius: 12rpx;
}

.info-item,
.promise-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.info-icon,
.promise-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.promise-icon {
  width: 36rpx;
  height: 36rpx;
  background-color: #4A90E2;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
}

.info-text,
.promise-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  flex: 1;
}

.protocol-links {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.link-text {
  color: #4A90E2;
  font-size: 28rpx;
  text-decoration: underline;
}

.checkbox-container {
  margin-bottom: 40rpx;
}

.checkbox-label {
  display: flex;
  align-items: flex-start;
}

.checkbox-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-left: 16rpx;
}

.btn-confirm {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
}

.tip-text {
  text-align: center;
  font-size: 24rpx;
  color: #999;
  margin-top: 20rpx;
  line-height: 1.6;
}

