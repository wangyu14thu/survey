/* pages/vote/vote.wxss */
.vote-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 180rpx;
}

.vote-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 40rpx;
  text-align: center;
  color: white;
}

.header-title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.header-subtitle {
  display: block;
  font-size: 26rpx;
  opacity: 0.9;
}

.vote-list {
  padding: 30rpx;
}

.vote-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s;
}

.vote-item:active {
  transform: scale(0.98);
}

.vote-item.selected {
  background: linear-gradient(135deg, #e8f4ff 0%, #f0e8ff 100%);
  border: 2rpx solid #4A90E2;
}

.item-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.item-icon {
  font-size: 60rpx;
  margin-right: 24rpx;
}

.item-info {
  display: flex;
  flex-direction: column;
}

.item-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.item-location {
  font-size: 24rpx;
  color: #999;
}

.item-right {
  margin-left: 20rpx;
}

.radio {
  width: 44rpx;
  height: 44rpx;
  border: 4rpx solid #ddd;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.radio-checked {
  border-color: #4A90E2;
  background-color: #4A90E2;
}

.radio-dot {
  width: 20rpx;
  height: 20rpx;
  background-color: white;
  border-radius: 50%;
}

.vote-info {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx;
}

.info-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.info-text {
  font-size: 24rpx;
  color: #999;
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx;
  background-color: white;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.btn-submit {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
}

