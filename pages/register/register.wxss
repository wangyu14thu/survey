/* pages/register/register.wxss */
.register-container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.register-header {
  position: relative;
  height: 400rpx;
  overflow: hidden;
}

.header-bg {
  width: 100%;
  height: 100%;
  filter: brightness(0.8);
}

.header-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  color: white;
}

.welcome-text {
  display: block;
  font-size: 32rpx;
  margin-bottom: 16rpx;
  opacity: 0.9;
}

.title-text {
  display: block;
  font-size: 52rpx;
  font-weight: bold;
  letter-spacing: 4rpx;
}

.register-form {
  margin-top: -60rpx;
  background-color: white;
  border-radius: 32rpx 32rpx 0 0;
  padding: 50rpx 40rpx;
  min-height: calc(100vh - 340rpx);
}

.form-item {
  margin-bottom: 40rpx;
}

.label {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.label-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.required {
  color: #ff4444;
  margin-left: 8rpx;
  font-size: 28rpx;
}

.tip-icon {
  margin-left: 12rpx;
  width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  text-align: center;
  background-color: #4A90E2;
  color: white;
  border-radius: 50%;
  font-size: 20rpx;
  font-weight: bold;
}

.input {
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 24rpx;
  background-color: #f5f7fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.input:focus {
  background-color: white;
  border-color: #4A90E2;
}

.picker {
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 24rpx;
  background-color: #f5f7fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.picker.placeholder {
  color: #999;
}

.arrow {
  font-size: 48rpx;
  color: #999;
  font-weight: 300;
  transform: rotate(90deg);
  margin-left: 20rpx;
}

.phone-input {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.phone-input .input {
  flex: 1;
}

.btn-wechat-auth {
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 32rpx;
  background-color: #07c160;
  color: white;
  border-radius: 12rpx;
  font-size: 26rpx;
  border: none;
  white-space: nowrap;
}

.form-tip {
  display: flex;
  align-items: flex-start;
  padding: 24rpx;
  background-color: #fff8e6;
  border-radius: 12rpx;
  margin-bottom: 40rpx;
}

.form-tip .tip-icon {
  margin-right: 12rpx;
  font-size: 32rpx;
  line-height: 1;
  background: none;
  width: auto;
  height: auto;
  color: #faad14;
}

.tip-text {
  flex: 1;
  font-size: 24rpx;
  color: #d48806;
  line-height: 1.6;
}

.btn-submit {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  margin-top: 20rpx;
}

