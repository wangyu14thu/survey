/* pages/register/register.wxss */
.register-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 30rpx;
}

.register-header {
  text-align: center;
  margin-bottom: 60rpx;
}

.header-icon {
  font-size: 120rpx;
  display: block;
  margin-bottom: 20rpx;
}

.header-title {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  display: block;
  margin-bottom: 10rpx;
}

.header-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  display: block;
}

.register-form {
  background-color: white;
  border-radius: 30rpx;
  padding: 50rpx 40rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
}

.form-item {
  margin-bottom: 40rpx;
}

.label {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.label-text {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.required {
  color: #ff4444;
  margin-left: 8rpx;
  font-size: 32rpx;
}

.input {
  height: 88rpx;
  background-color: #f5f7fa;
  border-radius: 12rpx;
  padding: 0 30rpx;
  font-size: 30rpx;
  color: #333;
}

.picker {
  height: 88rpx;
  background-color: #f5f7fa;
  border-radius: 12rpx;
  padding: 0 30rpx;
  font-size: 30rpx;
  color: #333;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.picker.placeholder {
  color: #999;
}

.arrow {
  font-size: 48rpx;
  color: #ccc;
}

.form-tip {
  display: flex;
  align-items: center;
  background-color: #fff3cd;
  padding: 20rpx 30rpx;
  border-radius: 12rpx;
  margin-bottom: 40rpx;
}

.tip-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.tip-text {
  font-size: 26rpx;
  color: #856404;
  flex: 1;
  line-height: 1.5;
}

.btn-submit {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  transition: all 0.3s;
}

.btn-submit:active {
  opacity: 0.8;
  transform: scale(0.98);
}

.btn-disabled {
  background: #e0e0e0 !important;
  color: #999 !important;
}

