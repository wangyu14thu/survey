/* pages/upload/upload.wxss */
.upload-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 30rpx;
}

.page-header {
  margin-bottom: 30rpx;
}

.header-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 12rpx;
}

.header-subtitle {
  font-size: 28rpx;
  color: #999;
  display: block;
}

.upload-form {
  background-color: white;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.form-item {
  margin-bottom: 40rpx;
}

.label {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.label-text {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.required {
  color: #ff4444;
  margin-left: 8rpx;
  font-size: 30rpx;
}

.label-tip {
  font-size: 24rpx;
  color: #999;
  display: block;
  margin-top: 8rpx;
  margin-bottom: 16rpx;
}

.input {
  height: 88rpx;
  background-color: #f5f7fa;
  border-radius: 12rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #333;
}

.picker {
  height: 88rpx;
  background-color: #f5f7fa;
  border-radius: 12rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #333;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.picker.placeholder {
  color: #999;
}

.arrow {
  font-size: 48rpx;
  color: #ccc;
}

.textarea {
  min-height: 200rpx;
  background-color: #f5f7fa;
  border-radius: 12rpx;
  padding: 24rpx 30rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

.char-count {
  font-size: 24rpx;
  color: #999;
  text-align: right;
  display: block;
  margin-top: 12rpx;
}

.files-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.file-item {
  width: calc(50% - 8rpx);
  background-color: #f5f7fa;
  padding: 24rpx;
  border-radius: 12rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.file-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.file-name {
  font-size: 24rpx;
  color: #666;
  text-align: center;
  word-break: break-all;
  line-height: 1.4;
}

.file-remove {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.remove-icon {
  font-size: 32rpx;
  color: white;
  line-height: 1;
}

.file-add {
  width: calc(50% - 8rpx);
  background-color: #f5f7fa;
  padding: 40rpx 24rpx;
  border-radius: 12rpx;
  border: 2rpx dashed #ccc;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.file-add:active {
  background-color: #e8f4ff;
  border-color: #4A90E2;
}

.add-icon {
  font-size: 48rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.add-text {
  font-size: 24rpx;
  color: #999;
}

.form-tip {
  display: flex;
  align-items: center;
  background-color: #e8f5e9;
  padding: 20rpx 30rpx;
  border-radius: 12rpx;
  margin-bottom: 40rpx;
}

.tip-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.tip-text {
  font-size: 26rpx;
  color: #2e7d32;
  flex: 1;
  line-height: 1.5;
}

.btn-submit {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  transition: all 0.3s;
}

.btn-submit:active {
  opacity: 0.8;
  transform: scale(0.98);
}

.btn-disabled {
  background: #e0e0e0 !important;
  color: #999 !important;
}

