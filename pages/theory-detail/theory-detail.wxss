/* pages/theory-detail/theory-detail.wxss */
.detail-container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.detail-header {
  padding: 60rpx 30rpx;
  text-align: center;
  color: white;
}

.header-icon {
  font-size: 100rpx;
  display: block;
  margin-bottom: 20rpx;
}

.header-title {
  font-size: 40rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 12rpx;
}

.header-subtitle {
  font-size: 26rpx;
  opacity: 0.9;
  display: block;
}

.points-bar {
  margin: -40rpx 30rpx 30rpx;
  background-color: white;
  padding: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.1);
}

.points-info {
  display: flex;
  align-items: center;
  justify-content: center;
}

.points-icon {
  font-size: 40rpx;
  margin-right: 12rpx;
}

.points-text {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.materials-list {
  padding: 0 30rpx 30rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.material-card {
  background-color: white;
  padding: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.material-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.material-type {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: bold;
  color: white;
}

.material-type.pdf {
  background-color: #f44336;
}

.material-type.doc {
  background-color: #2196f3;
}

.material-status {
  font-size: 24rpx;
  color: #999;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  background-color: #f5f5f5;
}

.material-status.purchased {
  background-color: #e8f5e9;
  color: #4caf50;
}

.material-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 24rpx;
  line-height: 1.5;
}

.material-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.material-points {
  display: flex;
  align-items: center;
}

.points-icon-small {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.points-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #f093fb;
}

.btn-purchase {
  padding: 16rpx 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  font-size: 28rpx;
  border-radius: 30rpx;
  border: none;
}

.btn-download {
  background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
}

.tips-box {
  margin: 0 30rpx 30rpx;
  padding: 24rpx 30rpx;
  background-color: #fff3cd;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
}

.tips-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.tips-text {
  font-size: 24rpx;
  color: #856404;
  flex: 1;
  line-height: 1.5;
}

