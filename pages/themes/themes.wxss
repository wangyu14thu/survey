/* pages/themes/themes.wxss */
.themes-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 30rpx 20rpx;
}

/* 主题列表 */
.themes-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.theme-card {
  width: calc(50% - 10rpx);
  background-color: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s;
}

.theme-card:active {
  transform: scale(0.95);
}

.theme-cover {
  position: relative;
  height: 280rpx;
  overflow: hidden;
}

.cover-image {
  width: 100%;
  height: 100%;
}

.theme-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(to bottom, transparent 40%, rgba(0, 0, 0, 0.6));
  display: flex;
  align-items: flex-end;
  padding: 24rpx;
}

.theme-icon {
  font-size: 70rpx;
}

.theme-info {
  padding: 24rpx;
}

.theme-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.theme-location {
  display: flex;
  align-items: center;
}

.location-icon {
  font-size: 24rpx;
  margin-right: 6rpx;
}

.location-text {
  font-size: 24rpx;
  color: #666;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

