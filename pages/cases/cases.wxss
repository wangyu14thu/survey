/* pages/cases/cases.wxss */
.cases-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 30rpx;
}

.page-header {
  margin-bottom: 30rpx;
}

.header-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 12rpx;
}

.header-subtitle {
  font-size: 28rpx;
  color: #999;
  display: block;
}

.grades-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.grade-card {
  width: calc(50% - 10rpx);
  padding: 40rpx 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.15);
  position: relative;
  overflow: hidden;
  transition: all 0.3s;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.grade-card:active {
  transform: scale(0.95);
}

.grade-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
}

.grade-name {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 8rpx;
}

.grade-count {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

.grade-arrow {
  position: absolute;
  bottom: 15rpx;
  right: 20rpx;
  font-size: 40rpx;
  color: rgba(255, 255, 255, 0.5);
}

