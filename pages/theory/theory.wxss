/* pages/theory/theory.wxss */
.theory-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 30rpx;
}

.page-header {
  margin-bottom: 30rpx;
}

.header-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 12rpx;
}

.header-subtitle {
  font-size: 28rpx;
  color: #999;
  display: block;
}

.categories-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.category-card {
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s;
}

.category-card:active {
  transform: scale(0.98);
}

.category-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.category-icon {
  font-size: 56rpx;
  margin-right: 20rpx;
}

.category-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.category-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.category-count {
  font-size: 24rpx;
  color: #999;
}

.category-arrow {
  font-size: 48rpx;
  color: #ccc;
}

.category-preview {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  padding: 20rpx;
  background-color: #f5f7fa;
  border-radius: 12rpx;
}

.preview-item {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

.preview-more {
  font-size: 24rpx;
  color: #4A90E2;
  margin-top: 8rpx;
}

