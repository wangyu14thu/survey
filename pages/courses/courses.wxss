/* pages/courses/courses.wxss */
.courses-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 30rpx;
}

.courses-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 40rpx;
  text-align: center;
  color: white;
}

.header-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.header-subtitle {
  display: block;
  font-size: 28rpx;
  opacity: 0.9;
}

/* 课程列表 */
.courses-list {
  padding: 30rpx;
}

.course-card {
  background-color: white;
  border-radius: 20rpx;
  margin-bottom: 40rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

/* 课程封面 */
.course-cover {
  position: relative;
  height: 400rpx;
}

.cover-image {
  width: 100%;
  height: 100%;
}

.course-tag {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  background: linear-gradient(135deg, #ff6b6b, #ee5a6f);
  color: white;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 107, 0.4);
}

.course-price-badge {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  background-color: rgba(0, 0, 0, 0.7);
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  display: flex;
  align-items: baseline;
  gap: 12rpx;
}

.price {
  color: #ffd700;
  font-size: 36rpx;
  font-weight: bold;
}

.original-price {
  color: rgba(255, 255, 255, 0.6);
  font-size: 24rpx;
  text-decoration: line-through;
}

/* 课程信息 */
.course-info {
  padding: 40rpx;
}

.course-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.course-subtitle {
  font-size: 28rpx;
  color: #4A90E2;
  margin-bottom: 30rpx;
}

/* 课程亮点 */
.course-highlights {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 30rpx;
  padding: 24rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
}

.highlight-item {
  display: flex;
  align-items: center;
}

.highlight-dot {
  width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  text-align: center;
  background-color: #4A90E2;
  color: white;
  border-radius: 50%;
  font-size: 20rpx;
  font-weight: bold;
  margin-right: 12rpx;
  flex-shrink: 0;
}

.highlight-text {
  font-size: 26rpx;
  color: #666;
}

/* 课程元信息 */
.course-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
  margin-bottom: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.meta-item {
  display: flex;
  align-items: center;
}

.meta-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.meta-text {
  font-size: 24rpx;
  color: #999;
}

/* 报名进度 */
.enrollment-progress {
  margin-bottom: 30rpx;
}

.progress-bar {
  height: 16rpx;
  background-color: #f0f0f0;
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 12rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #667eea, #764ba2);
  border-radius: 8rpx;
  transition: width 0.5s ease;
}

.progress-text {
  font-size: 24rpx;
  color: #999;
}

/* 报名按钮 */
.btn-enroll {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
}

/* 空状态 */
.empty-state {
  padding: 120rpx 60rpx;
  text-align: center;
}

.empty-image {
  width: 400rpx;
  height: 400rpx;
  opacity: 0.3;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: #999;
  margin-top: 40rpx;
  margin-bottom: 16rpx;
}

.empty-tip {
  display: block;
  font-size: 26rpx;
  color: #ccc;
}

