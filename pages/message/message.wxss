/* pages/message/message.wxss */
.message-container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 顶部操作栏 */
.header-actions {
  background-color: white;
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  text-align: right;
}

.action-text {
  color: #4A90E2;
  font-size: 28rpx;
}

/* 消息列表 */
.message-list {
  background-color: white;
}

.message-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
  transition: background-color 0.3s;
}

.message-item:active {
  background-color: #f8f8f8;
}

.message-item.unread {
  background-color: #f0f7ff;
}

.message-icon {
  width: 88rpx;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  position: relative;
  flex-shrink: 0;
}

.icon-emoji {
  font-size: 44rpx;
}

.unread-badge {
  position: absolute;
  top: 0;
  right: 0;
  width: 20rpx;
  height: 20rpx;
  background-color: #ff4444;
  border-radius: 50%;
  border: 3rpx solid white;
}

.message-content {
  flex: 1;
  min-width: 0;
}

.message-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.message-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.message-time {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
  flex-shrink: 0;
}

.message-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.message-arrow {
  font-size: 48rpx;
  color: #ddd;
  margin-left: 20rpx;
  transform: rotate(90deg);
  flex-shrink: 0;
}

/* 空状态 */
.empty-state {
  padding: 200rpx 60rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  display: block;
  margin-bottom: 40rpx;
  opacity: 0.5;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.empty-tip {
  display: block;
  font-size: 26rpx;
  color: #ccc;
}

