/* pages/tools/tools.wxss */
.tools-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 30rpx;
}

.page-header {
  margin-bottom: 30rpx;
}

.header-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 12rpx;
}

.header-subtitle {
  font-size: 28rpx;
  color: #999;
  display: block;
}

.categories-list {
  display: flex;
  flex-direction: column;
  gap: 40rpx;
}

.category-section {
  display: flex;
  flex-direction: column;
}

.category-title {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.title-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-right: 16rpx;
}

.title-line {
  flex: 1;
  height: 4rpx;
  border-radius: 2rpx;
}

.tools-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.tool-card {
  background-color: white;
  padding: 30rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s;
}

.tool-card:active {
  transform: scale(0.98);
  background-color: #f9f9f9;
}

.tool-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.tool-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.tool-subtitle {
  font-size: 24rpx;
  color: #999;
}

.tool-right {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.tool-points {
  display: flex;
  align-items: center;
  background-color: #fff3e0;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.points-icon {
  font-size: 24rpx;
  margin-right: 6rpx;
}

.points-text {
  font-size: 24rpx;
  font-weight: bold;
  color: #ff9800;
}

.tool-arrow {
  font-size: 44rpx;
  color: #ccc;
}

