/* pages/course-detail/course-detail.wxss */
.detail-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 160rpx;
}

/* 课程头部 */
.course-header {
  position: relative;
  height: 500rpx;
}

.header-image {
  width: 100%;
  height: 100%;
}

.header-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 50rpx 40rpx;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.8), transparent);
}

.course-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 12rpx;
}

.course-subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 内容区域 */
.course-content {
  padding: 30rpx;
}

.card {
  background-color: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.title-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

/* 价格区域 */
.price-section {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.price-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.price-main {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.price-symbol {
  font-size: 36rpx;
  font-weight: bold;
}

.price-value {
  font-size: 60rpx;
  font-weight: bold;
}

.price-original {
  font-size: 28rpx;
  opacity: 0.6;
  text-decoration: line-through;
}

.quota-info {
  text-align: right;
}

.quota-number {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
}

.quota-text {
  display: block;
  font-size: 24rpx;
  opacity: 0.9;
}

.price-section .progress-bar {
  height: 12rpx;
  background-color: rgba(255, 255, 255, 0.3);
  border-radius: 6rpx;
  overflow: hidden;
  margin-bottom: 12rpx;
}

.price-section .progress-fill {
  height: 100%;
  background-color: white;
  border-radius: 6rpx;
}

.price-section .progress-text {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 亮点列表 */
.highlights-list,
.includes-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.highlight-item,
.include-item {
  display: flex;
  align-items: flex-start;
}

.item-dot,
.include-dot {
  width: 12rpx;
  height: 12rpx;
  background-color: #4A90E2;
  border-radius: 50%;
  margin-right: 20rpx;
  margin-top: 14rpx;
  flex-shrink: 0;
}

.include-dot {
  width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  text-align: center;
  background-color: #4A90E2;
  color: white;
  font-size: 20rpx;
  font-weight: bold;
  margin-top: 0;
}

.item-text,
.include-text {
  flex: 1;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 课程介绍 */
.intro-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
}

/* 课程安排 */
.schedule-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.schedule-item {
  display: flex;
  gap: 20rpx;
}

.schedule-day {
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  font-weight: bold;
  flex-shrink: 0;
}

.schedule-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.schedule-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.schedule-detail {
  font-size: 26rpx;
  color: #999;
  line-height: 1.6;
  white-space: pre-line;
}

/* 课程信息 */
.info-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
  padding-bottom: 0;
}

.info-label {
  font-size: 28rpx;
  color: #999;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  text-align: right;
  flex: 1;
  margin-left: 40rpx;
}

/* 图片网格 */
.images-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.grid-image {
  width: 100%;
  height: 200rpx;
  border-radius: 12rpx;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx;
  background-color: white;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.08);
  display: flex;
  align-items: center;
  justify-content: space-between;
  z-index: 100;
}

.bar-left {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.bar-price {
  font-size: 48rpx;
  font-weight: bold;
  color: #ff6b6b;
}

.bar-tip {
  font-size: 24rpx;
  color: #999;
}

.btn-enroll {
  width: 360rpx;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
}

