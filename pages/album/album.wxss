/* pages/album/album.wxss */
.album-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 30rpx;
}

.album-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 40rpx;
  text-align: center;
  color: white;
}

.header-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.header-subtitle {
  display: block;
  font-size: 28rpx;
  opacity: 0.9;
}

/* 章节标题 */
.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 30rpx 20rpx;
}

.header-left {
  display: flex;
  align-items: center;
}

.section-icon {
  font-size: 40rpx;
  margin-right: 12rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.class-badge {
  background-color: #4A90E2;
  color: white;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

/* 相册卡片 */
.album-card {
  background-color: white;
  border-radius: 20rpx;
  margin: 0 30rpx 30rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.album-card.featured {
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.2);
  border: 2rpx solid #4A90E2;
}

.album-info {
  padding: 30rpx;
}

.album-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.album-meta {
  display: block;
  font-size: 24rpx;
  color: #999;
}

/* 照片网格 */
.photo-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 4rpx;
  padding: 0 4rpx 4rpx;
}

.photo-item {
  width: 100%;
  height: 220rpx;
  background-color: #f0f0f0;
}

.photo-more {
  width: 100%;
  height: 220rpx;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
}

.more-text {
  color: white;
  font-size: 40rpx;
  font-weight: bold;
}

/* 相册操作 */
.album-actions {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  background-color: #f8f9fa;
}

.action-btn {
  flex: 1;
  height: 80rpx;
  background-color: white;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  font-size: 28rpx;
  color: #666;
}

.action-btn:active {
  opacity: 0.7;
}

.btn-icon {
  font-size: 32rpx;
}

/* 全校相册列表 */
.albums-list {
  padding: 0 30rpx;
}

.album-cover {
  position: relative;
  height: 360rpx;
}

.cover-image {
  width: 100%;
  height: 100%;
}

.cover-badge {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  background-color: rgba(0, 0, 0, 0.6);
  color: white;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

/* 空状态 */
.empty-state {
  padding: 120rpx 60rpx;
  text-align: center;
}

.empty-image {
  width: 400rpx;
  height: 400rpx;
  opacity: 0.3;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: #999;
  margin-top: 40rpx;
  margin-bottom: 16rpx;
}

.empty-tip {
  display: block;
  font-size: 26rpx;
  color: #ccc;
}

/* 教师入口 */
.teacher-entry {
  position: fixed;
  bottom: 100rpx;
  right: 30rpx;
  width: 140rpx;
  height: 140rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
  z-index: 100;
}

.teacher-entry:active {
  transform: scale(0.95);
}

.entry-icon {
  font-size: 56rpx;
  margin-bottom: 8rpx;
}

.entry-text {
  color: white;
  font-size: 20rpx;
  text-align: center;
}

