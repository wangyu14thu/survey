/**app.wxss**/
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", "Helvetica Neue", Helvetica, Arial, sans-serif;
  font-size: 14px;
  line-height: 1.6;
  color: #333;
}

.container {
  padding: 20rpx;
  box-sizing: border-box;
}

/* 按钮样式 */
.btn-primary {
  background-color: #4A90E2;
  color: white;
  border-radius: 8rpx;
  padding: 24rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(74, 144, 226, 0.3);
}

.btn-primary:active {
  opacity: 0.8;
}

.btn-disabled {
  background-color: #cccccc;
  color: #999999;
  box-shadow: none;
}

.btn-secondary {
  background-color: white;
  color: #4A90E2;
  border: 2rpx solid #4A90E2;
  border-radius: 8rpx;
  padding: 24rpx;
  text-align: center;
  font-size: 32rpx;
}

/* 卡片样式 */
.card {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

/* 标题样式 */
.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

/* 标签样式 */
.tag {
  display: inline-block;
  padding: 8rpx 16rpx;
  background-color: #E8F4FF;
  color: #4A90E2;
  border-radius: 8rpx;
  font-size: 24rpx;
  margin-right: 12rpx;
}

/* 分割线 */
.divider {
  height: 1rpx;
  background-color: #e0e0e0;
  margin: 30rpx 0;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 0;
}

.empty-state image {
  width: 300rpx;
  height: 300rpx;
  opacity: 0.3;
}

.empty-state text {
  display: block;
  color: #999;
  font-size: 28rpx;
  margin-top: 30rpx;
}

/* 加载中 */
.loading {
  text-align: center;
  padding: 50rpx;
  color: #999;
}

